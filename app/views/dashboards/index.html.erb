<h2 class="text-center"><%= "Hi #{@user.username} !" %></h2>
<%# <%= @dashboard_media.mediable.time_reading %>
<%# <%= @user.available_time %>
<p class="text-center"><%= "#{@user_time} minutes de lecture" %></p>
<div class="card-container">
<% @medias.each do |media| %>
  <div class="card-product">
    <img src="https://source.unsplash.com/daily?news" />
    <div class="card-product-infos">
      <h2><%= media.title %></h2>
      <p><%= media.content %></p>
      <footer class="blockquote-footer"><cite title="Source Title"><%= media.source %></cite></footer>
    </div>
  </div>
<% end %>
</div>
