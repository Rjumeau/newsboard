
<!--Carousel Wrapper-->
<div id="multi-item-example" class="carousel slide carousel-multi-item" data-ride="carousel">
  <!--Controls-->
  <div class="controls-top">
    <a class="btn-floating" href="#multi-item-example" data-slide="prev"><i class="fas fa-chevron-left"></i></a>
    <p>DATE</p>
    <a class="btn-floating" href="#multi-item-example" data-slide="next"><i class="fas fa-chevron-right"></i></a>
  </div>
  <!--/.Controls-->
  <!--Slides-->
  <div class="carousel-inner" role="listbox">
    <!--First slide-->
    <div class="carousel-item active">
      <% @first_dashboard = @user.dashboards.order(:created_at).last%>
      <% @y = @user.dashboards.last.articles %>
      <p class="text-center date"><%= @first_dashboard.created_at.to_date %></p>
      <% @y.each do |article| %>
         <div class="col-md-3" style="float:left">
            <div class="card mb-2">
              <img class="card-img-top" src="<%= article.image%>" alt="Card image cap">
                <div class="card-body">
                  <h4 class="card-title"><%= article.title %></h4>
                  <p class="card-text"><%= article.content %></p>
                  <cite class="source">Source: <%= article.source %> </cite>
                  <a class="btn btn-primary" href="<%= article.url %>">Voir l'article</a>
                </div>
              </div>
            </div>
        <% end %>
    </div>
    <!--/.First slide-->
    <!--Second slide-->
    <% @u = @user.dashboards.order(:created_at).last(7) %>
    <% @y = @u.clone %>
    <% @y.pop %>
    <% @y.each do |old_dashboard| %>
      <div class="carousel-item">
      <p class="text-center date"><%= old_dashboard.created_at.to_date %></p>
      <% @old = old_dashboard.articles %>
        <% @old.each do |article| %>
          <div class="col-md-3" style="float:left">
            <div class="card mb-2">
              <img class="card-img-top" src="<%= article.image %>" alt="Card image cap">
              <div class="card-body">
                <h4 class="card-title"><%= article.title %></h4>
                <p class="card-text"><%= article.content %></p>
                <cite class="source">Source: <%= article.source %> </cite>
                <a class="btn btn-primary" href="<%=article.url %>">Voir l'article</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <!--/.Second slide-->
  </div>
  <!--/.Slides-->
</div>
<!--/.Carousel Wrapper-->
